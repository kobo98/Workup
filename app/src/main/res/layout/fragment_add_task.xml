<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app2youth.hackaton.workup.AddTaskActivity$PlaceholderFragment"
    android:background="@mipmap/new_user">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="הוספת מטלה"
        android:id="@+id/title_new"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="-3dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/taskName"
        android:layout_above="@+id/teacherId"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/teacherId"
        android:textAlignment="center"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/doDate"
        android:layout_alignParentRight="false"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/doDate"
        android:layout_above="@+id/addTask"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:layout_below="@+id/title_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:text="צור חשבון"
        android:id="@+id/addTask"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:onClick="openMainActivity"
        android:src="@mipmap/add_task"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
