<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app2youth.hackaton.workup.RegistrationActivity"
    android:background="@mipmap/new_user">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="הרשמה"
        android:id="@+id/title_new"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="-3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/studentRegistration"
        android:onClick="registrationStudent"
        android:src="@mipmap/student_registration_button"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/title_new" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/teacherRegistration"
        android:onClick="registrationTeacher"
        android:src="@mipmap/teacher_registration_button"
        android:layout_below="@+id/studentRegistration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
