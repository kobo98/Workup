<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/back"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#ffffffff"
		android:orientation="vertical"
		android:tag="back">

	</LinearLayout>





	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/front"
		android:layout_width="match_parent"
		android:layout_height="76dp"
		android:background="#ffffffff"
		android:tag="front">


		<TextView
			android:id="@+id/subject"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:text="פיזיקה"
			android:textColor="#ff11a7ff"
			android:textSize="32dp" />

		<TextView
			android:id="@+id/teacher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_marginBottom="5dp"
			android:text="אברהם יונה"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#f011a7ff"
			android:textSize="18dp" />

		<TextView
			android:id="@+id/do_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="10dp"
			android:layout_toEndOf="@+id/symbol"
			android:layout_toRightOf="@+id/symbol"
			android:text="20/5/2015"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#ff11a7ff"
			android:textSize="27dp" />

		<ImageView
			android:id="@+id/symbol"
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:background="#ffffffff" />

		<ImageView
			android:id="@+id/left_color"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="#ff00ff00" />

		<ImageView
			android:id="@+id/right_color"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:background="#ffff0000" />


		<LinearLayout
			android:id="@+id/left"
			android:layout_width="350dp"
			android:layout_height="76dp"
			android:orientation="horizontal"
			android:layout_marginLeft="-350dp"
			>
			<ImageView
				android:id="@+id/imageView"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toEndOf="@+id/imageView3"
				android:layout_toRightOf="@+id/imageView3"
				android:onClick="pressedFace1"
				android:layout_weight="1"
				android:src="@mipmap/sd" />

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:onClick="pressedFace2"
				android:layout_weight="1"
				android:src="@mipmap/pkr" />

			<ImageView
				android:id="@+id/imageView3"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:onClick="pressedFace3"
				android:layout_weight="1"
				android:src="@mipmap/hap1" />

			<ImageView
				android:id="@+id/imageView4"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toEndOf="@+id/imageView2"
				android:layout_toRightOf="@+id/imageView2"
				android:onClick="pressedFace4"
				android:layout_weight="1"
				android:src="@mipmap/hap2" />

			<ImageView
				android:id="@+id/imageView5"
				android:layout_width="76dp"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/imageView4"
				android:onClick="pressedFace5"
				android:layout_weight="1"
				android:src="@mipmap/vhappy" />

		</LinearLayout>

	</RelativeLayout>




</FrameLayout>