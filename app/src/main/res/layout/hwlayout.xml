<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00ff00"
        android:id="@+id/back"
        android:tag="back"
        android:orientation="vertical">

    </LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffffff"
    android:id="@+id/front"
    android:tag="front">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subject"
        android:textSize="32dp"
        android:text="פיזיקה"
        android:textColor="#ff11a7ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="אברהם יונה"
        android:id="@+id/teacher"
        android:textSize="18dp"
        android:textColor="#ff11a7ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20/5/2015"
        android:id="@+id/do_date"
        android:textSize="27dp"
        android:textColor="#ff11a7ff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/symbol"
        android:layout_toEndOf="@+id/symbol"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/symbol"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#ff00ff00" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:id="@+id/left_color"
        android:background="#ff00ff00"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/right_color"
        android:background="#ffff0000" />

</RelativeLayout>
</FrameLayout>