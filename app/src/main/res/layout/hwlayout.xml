<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/back"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#eeeeee"
		android:orientation="vertical"
		android:tag="back">




	</LinearLayout>

	<LinearLayout
		android:id="@+id/front"
		android:layout_width="350dp"
		android:layout_height="76dp"
		android:orientation="horizontal"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="5dp"
		>
		<!--android:layout_marginLeft="-350dp"-->


		<ImageView
			android:id="@+id/imageView"
			android:alpha="0"
			android:layout_width="76dp"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/imageView3"
			android:layout_toRightOf="@+id/imageView3"
			android:onClick="pressedFace1"
			android:layout_weight="1"
			android:src="@mipmap/sd" />

		<ImageView
			android:id="@+id/imageView2"
			android:alpha="0"
			android:layout_width="76dp"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:onClick="pressedFace2"
			android:layout_weight="1"
			android:src="@mipmap/pkr" />

		<ImageView
			android:id="@+id/imageView3"
			android:alpha="0"
			android:layout_width="76dp"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:onClick="pressedFace3"
			android:layout_weight="1"
			android:src="@mipmap/hap1" />

		<ImageView
			android:id="@+id/imageView4"
			android:alpha="0"
			android:layout_width="76dp"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/imageView2"
			android:layout_toRightOf="@+id/imageView2"
			android:onClick="pressedFace4"
			android:layout_weight="1"
			android:src="@mipmap/hap2" />

		<ImageView
			android:id="@+id/imageView5"
			android:alpha="0"
			android:layout_width="76dp"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/imageView4"
			android:onClick="pressedFace5"
			android:layout_weight="1"
			android:src="@mipmap/vhappy" />

	</LinearLayout>



	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/left"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true"
		android:tag="front">


		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		                android:id="@+id/before_swipe"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_margin="10dp"
		                android:padding="5dp"
		                android:background="@drawable/tasks_border"
		                >

			<TextView
				android:id="@+id/do_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="3dp"
				android:layout_marginRight="3dp"
				android:text="20/5/2015"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#00cc00"
				android:textStyle="bold"
				android:textSize="14dp" />

			<TextView
				android:id="@+id/subject"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_below="@id/do_date"
				android:layout_marginRight="3dp"
				android:text="אלגברה"
				android:textColor="#000000"
				android:layout_weight="1"
				android:textSize="26dp" />

			<TextView
				android:id="@+id/description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_below="@id/subject"
				android:layout_marginRight="3dp"
				android:text="תעשו ככה וככה עבדים"
				android:textColor="#606060"
				android:layout_weight="1"
				android:textSize="16dp" />


			<ImageView
				android:id="@+id/attachment"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginTop="5dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_marginLeft="5dp"
				android:src="@mipmap/file_iconv2"
				android:background="#ffffffff" />

			<TextView
				android:id="@+id/group_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignTop="@+id/description"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="12dp"
				android:text="פיזיקה"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#606060"
				android:textSize="19dp" />

		</RelativeLayout>




	</RelativeLayout>



</FrameLayout>