<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.app2youth.hackaton.Workup1.AddGradeActivity$PlaceholderFragment">


	<Spinner
		android:id="@+id/choose_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="50dp"
		android:layout_marginBottom="20dp" />

	<EditText
		android:id="@+id/exam_description"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="30dp"
		android:layout_marginRight="20dp"
		android:layout_marginLeft="10dp"
		android:layout_below="@id/choose_group"
		android:hint="@string/hint_exam_name"
		android:inputType="textPersonName"
		android:ems="12" />

	<Button
		android:id="@+id/add_grade_button"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_below="@id/choose_group"
		android:layout_toLeftOf="@id/exam_description"
		android:layout_marginBottom="0dp"
		android:onClick="addGrade"
		android:text="העלה ציונים"
		android:src="@mipmap/add_grade" />

	<ListView
		android:id="@+id/list_of_grades"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/exam_description"
		android:layout_centerHorizontal="true" />



</RelativeLayout>
